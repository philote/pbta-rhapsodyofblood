<div class="cell cell--group cell--covenants">
  <h2 class="cell__title">
    <label class="item-group-label">{{localize "RoB.CharacterSheets.covenants.label"}}</label>
    <div class='item-controls'>
      <button
        type='button'
        class='item-control item-create'
        data-type='pbta-rhapsodyofblood.covenant'
        data-connection-type='covenant' >
        <i class='fas fa-plus'></i>
      </button>
    </div>
  </h2>
  <ol class='items-list'>
    {{#each actor.covenants as |covenant key|}}
      <li class='item flexcol' data-item-id='{{covenant._id}}'>
        <div class="form-group">
          <label class='item-name'>{{localize "RoB.CharacterSheets.covenants.formed"}}</label>
          <input type="text" data-covenant-action='name' value="{{covenant.name}}">
          <div class='item-controls'>
            <a class='item-control item-edit' title='Edit Item'><i class='fa-regular fa-edit'></i></a>
            <a class='item-control item-delete' title='Delete Item'><i class='fa-regular fa-trash'></i></a>
          </div>
        </div>
        <div class="form-side-by-side">
          <div class="form-group-stacked">
          <label>{{localize "RoB.item.covenant.explorerName"}}</label>
          <input type="text" data-covenant-action='explorer' value="{{covenant.system.explorerName}}">
        </div>
        <div class="form-group-stacked">
          <label>{{localize "RoB.item.covenant.ratingLabel"}}</label>
          <input type="number"  data-covenant-action='rating' min="0" value="{{covenant.system.rating}}">
        </div>
        </div>
        <div class="form-side-by-side">
          <div class="form-group-stacked">
            <label>{{localize "RoB.item.covenant.strengthenLabel"}}</label>
            <textarea data-covenant-action='strengthen'>{{covenant.system.strengthen}}</textarea>
          </div>
          <div class="form-group-stacked">
            <label>{{localize "RoB.item.covenant.weakenLabel"}}</label>
            <textarea data-covenant-action='weaken'>{{covenant.system.weaken}}</textarea>
          </div>
        </div>
      </li>
    {{/each}}
  </ol>
</div>