<div class="cell cell--group cell--pacts">
  {{{actor.system.attributes.pactInfo.value}}}
  <h2 class="cell__title">
    <label class="item-group-label">{{localize "RoB.CharacterSheets.pacts.label"}}</label>
    <div class='item-controls'>
      <button
        type='button'
        class='item-control item-create'
        data-type='pbta-rhapsodyofblood.pact'
        data-connection-type='pact' >
        <i class='fas fa-plus'></i>
      </button>
    </div>
  </h2>
  <ol class='items-list'>
    {{#each actor.pacts as |pact key|}}
      <li class='item flexcol' data-item-id='{{pact._id}}'>
        <div class="form-group">
          <label class='item-name'>{{localize "RoB.CharacterSheets.pacts.bloodlineName"}}</label>
          <input type="text" data-pact-action='name' value="{{pact.name}}">
          <div class='item-controls'>
            <a class='item-control item-edit' title='Edit Item'><i class='fa-regular fa-edit'></i></a>
            <a class='item-control item-delete' title='Delete Item'><i class='fa-regular fa-trash'></i></a>
          </div>
        </div>
        <div class="form-group">
          <label>{{localize "RoB.item.pact.pactsLabel"}}</label>
          <input type="number" data-pact-action='pacts' min="0" value="{{pact.system.pacts}}">
        </div>
      </li>
    {{/each}}
  </ol>
</div>